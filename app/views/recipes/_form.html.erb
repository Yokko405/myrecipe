<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div>
      <h2><%= pluralize(recipe.errors.count, "error") %> が検出されました：</h2>
      <ul>
        <% recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "説明" %>
    <%= form.text_area :description %>
  </div>

  <h2>材料と分量</h2>
  <table id="ingredients_table">
    <thead>
      <tr>
        <th>材料</th>
        <th>分量</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <%= form.fields_for :ingredients do |ingredient_form| %>
        <%= render 'ingredient_fields', f: ingredient_form %>
      <% end %>
    </tbody>
  </table>

  <%= link_to '材料を追加', '#', id: "add_ingredient", class: "button" %>

  <div>
    <%= form.label :instructions, "作り方" %>
    <%= form.text_area :instructions %>
  </div>

  <div>
    <%= form.label :image, "画像" %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :color_groups, "食品群" %><br>
    <% ColorGroup.all.each do |color_group| %>
      <%= form.check_box :color_group_ids, { multiple: true }, color_group.id, nil %>
      <%= form.label "color_group_ids_#{color_group.id}", color_group.name %><br>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<script>
  // ここにJavaScriptコードを追加。"材料を追加"のリンクをクリックすると、
  // 新しい材料フィールドを追加する機能を実装します。
</script>
